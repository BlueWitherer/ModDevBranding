{
    "geode": "5.0.0-beta.2",
    "gd": {
        "win": "2.2081",
        "android": "2.2081",
        "mac": "2.2081",
        "ios": "2.2081"
    },
    "id": "cheeseworks.moddevbranding",
    "name": "Mod Developer Branding",
    "version": "2.0.0",
    "developers": [
        "Cheeseworks"
    ],
    "description": "Developer branding on mod info popups.",
    "tags": [
        "enhancement"
    ],
    "links": {
        "source": "https://github.com/BlueWitherer/ModDevBranding",
        "homepage": "https://moddev.cheeseworks.gay/",
        "community": "https://www.dsc.gg/cheeseworks"
    },
    "dependencies": {
        "alphalaneous.alphas_geode_utils": ">=1.2.0"
    },
    "api": {
        "include": [
            "include/*.hpp"
        ]
    },
    "settings": {
        "preview-image": {
            "type": "file",
            "name": "Test Brand Image",
            "description": "Provide a local image to test it out as branding on this mod's popup.",
            "default": "",
            "control": {
                "dialog": "open",
                "filters": [
                    {
                        "files": [
                            "*.png",
                            "*.jpg",
                            "*.jpeg",
                            "*.webp",
                            "*.gif"
                        ],
                        "description": "Image Files"
                    }
                ]
            }
        },
        "timeout": {
            "type": "float",
            "name": "Load Timeout",
            "description": "Duration in seconds until the branding image cancels loading.",
            "default": 5.0,
            "min": 1.0,
            "max": 45.0,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 1.0,
                "arrows": true,
                "arrow-step": 5.0,
                "big-arrows": true,
                "big-arrow-step": 15.0
            }
        },
        "opacity": {
            "type": "int",
            "name": "Image Opacity",
            "description": "Adjust the opacity of the branding image that appears on the mod information popup.",
            "default": 125,
            "min": 1,
            "max": 255,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 1,
                "arrows": true,
                "arrow-step": 25,
                "big-arrows": true,
                "big-arrow-step": 100
            }
        }
    },
    "early-load": false
}